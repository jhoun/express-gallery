{{#if user.admin}}
  <a href="/portfolio/new"><button>New Project</button></a>
  <a href="/logout"><button>Logout</button></a>
{{/if}}

<div class="banner">
  <h1 class="headline"> I am an art director. I am a designer.I like fun projects. I like fun people. I like art directing and designing fun projects with fun people.</h1>
</div>

<div class="body-container">
  {{#each project}}
      <div class="project-container">
        <a href="/portfolio/{{id}}"><img src="{{this.image}}"></a>
        <div class="title">{{this.title}}</div>


        {{#if ../user.admin}}
          <a href="/portfolio/{{id}}"><button>More Info</button></a>
        {{/if}}
      </div>
  {{/each}}
</div>

